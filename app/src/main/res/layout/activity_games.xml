<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangedetailedbg"
    tools:context=".GamesActivity">

    <Button
        android:id="@+id/rhquizbutton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:text="QUIZ RH"
        android:textSize="30dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/farceb"
        app:cornerRadius="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="OpenQuizRH"/>

    <Button
        android:id="@+id/logquizbutton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:text="QUIZ LOGÍSTICA"
        android:textSize="30dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/farceb"
        app:cornerRadius="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rhquizbutton"
        android:onClick="OpenQuizLog"/>

    <Button
        android:id="@+id/tiquizbutton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:text="QUIZ INFORMÁTICA"
        android:textSize="30dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/farceb"
        app:cornerRadius="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logquizbutton"
        android:onClick="OpenQuizTI"/>

</RelativeLayout>