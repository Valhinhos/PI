<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluedetailedbg"
    tools:context=".InfoEnfActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/tecenflogo" />

            <TextView
                android:id="@+id/logt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Técnico em Enfermagem:"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/obj_curso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="200dp"
                android:text="Objetivo do curso:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Formar profissionais com competências para atuar e intervir em seu campo de trabalho, com foco em resultados."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Promover o desenvolvimento do aluno por meio de ações que articulem e mobilizem conhecimentos e habilidades, valores e atitudes de forma potencialmente criativa e que estimule o aprimoramento contínuo."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Estimular, por meio de situações de aprendizagens, atitudes empreendedoras, sustentáveis e colaborativas nos alunos. Articular as competências do perfil profissional com projetos integradores e outras atividades laborais que estimulem a visão crítica e a tomada de decisão para resolução de problemas."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:text="Promover uma avaliação processual e formativa com base em indicadores das competências, que possibilitem a todos os envolvidos no processo educativo a verificação da aprendizagem. Incentivar a pesquisa como principio pedagógico e para consolidação do domínio técnico-científico, utilizando recursos didáticos e bibliográficos."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="200dp"
                android:text="Requisitos:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Apresentar CPF ou documento com número de registro (Frente e Verso);"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Apresentar comprovante de endereço residencial (emitido em no máximo 3 meses);"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Ser maior de 16 anos;"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Apresentar registro de Certidão Civil;"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Apresentar documento de conclusão do Ensino Médio ou de estar cursando este nível de ensino (qualquer ano) ou pela Educação de Jovens e Adultos = EJA (cursos presenciais, semipresenciais ou a
distância ou exames supletivos)."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="200dp"
                android:text="Carga Horária: 1600 horas"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="200dp"
                android:text="O que o aluno vai aprender?"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:text="Executar ações de prevenção, promoção, proteção, reabilitação e recuperação da saúde.
Participar da implementação da sistematização da assistência de enfermagem.
Administrar medicamentos, soluções e imunobiológicos.
Prestar cuidados de enfermagem de higiene, conforto e monitoramento das condições clínicas.
Prestar assistência de enfermagem em saúde mental.
Prestar assistância de enfermagem no período gestacional, parto, puerpério e ao recém-nascido.
Prestar assistência de enfermagem no período perioperatório.
Atuar em programas de qualidade e certificação hospitalar.
Administrar medicamentos de alta vigilância e hemocomponentes.
Prestar assistência de enfermagem em urgência e emergência.
Prestar assistência de enfermagem em cuidados críticos.
Prestar assistência de enfermagem em cuidados paliativos."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView14"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="200dp"
                android:text="Quem é esse profissional?"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:text="O Técnico em Enfermagem exerce atividade de nível médio, envolvendo orientação e acompanhamento do trabalho de Enfermagem em grau auxiliar, e participacão no planejamento da assistência de Enfermagem, prestando assistência tanto no ambiente intra hospitalar quanto no ambiente extra hospitalar. A sua atuação é grandiosa e permite trabalhar na educação, promoção, prevenção e reabilitação dos processos saúde, doença em todos os ciclos da vida."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:text="O mercado de trabalho para este profissional é vasto e poderá atuar em Clinicas, Hospitais (Centro Cirúrgicos, Pronto Atendimento, Berçário,
 UTI CME, dentre outros) Spas, Home Care, Laboratórios de Análises Clinicas, Ambulatório de empresas, Unidades Básicas de Saúde, SAMU, Escolas,
Instituições de Longa permanência, nos diferentes graus de complexidade do ambiente e gravidade dos clientes nos diversos serviços de saúde."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView17"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:text="Quais são as marcas formativas do aluno senac?"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:text="Domínio técnico-científico, visão crítica, atitude empreendedora, sustentável e colaborativa, com foco em resultados. Essas marcas reforçam o compromisso da Instituição com a formação integral do ser humano,
 considerando aspectos relacionados ao mundo do trabalho e ao exercício da cidadania. Essa perspectiva propicia o comprometimento do aluno com a qualidade do trabalho, o desenvolvimento de uma visão ampla e consciente sobre sua atuação profissional e sobre sua capacidade de transformação da sociedade."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView19"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:text="Quais são os diferenciais do curso?"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:text="O Senac é uma instituição de renome para a educação profissional, que tem conhecimento das práticas abordadas nas competições internacionais e ainda o atendimento consultivo para construção de um itinerário formativo para jornada profissional."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:text="O modelo pedagógico do SENAC se baseia no desenvolvimento de atividades práticas, que alinhadas ao embasamento teórico, permitem que as atividades desenvolvidas pelos alunos sejam direcionadas ao mercado de trabalho,
 de forma a encaminhá-lo para o sucesso profissional."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:text="Sendo assim, o aluno é estimulado a pensar, agir e aprender com autonomia diante de situações reais do mercado de trabalho.A educação profissional do SENAC, além de desenvolver os alunos do ponto de vista profissional, oferta uma educação transformadora, de forma a trazer impacto positivo em suas vidas, na comunidade em que vivem e para a sociedade como um todo."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Plano de Curso atualizado por profissionais sintonizados com as tendências do segmento."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Docentes com experiência profissional na área."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Aulas dinâmicas e interativas, com simulações reais de trabalho que privilegiam a formação de um profissional crítico e criativo."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Desenvolvimento de competências que envolvem a participação dos alunos em projetos e resolução de problemas."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Mínimo de 60% da CH do curso em atividades práticas que simulam a atividade profissional."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Atividades em Laboratório especializado para as práticas."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Construção de um Itinerário Formativo para além do curso."
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Diploma válido em todo o território nacional."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/voltarenf"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:text="VOLTAR"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange_strong"
                app:cornerRadius="20dp"
                android:layout_gravity="center"
                android:onClick="goBack"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>