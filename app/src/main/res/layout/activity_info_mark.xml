<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluedetailedbg"
    tools:context=".InfoMarkActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/tecmarketinglogo" />

            <TextView
                android:id="@+id/markt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Técnico em Marketing:"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/obj_curso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="200dp"
                android:text="Objetivo do Curso:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Formar profissionais com competências para atuar e intervir em seu campo de trabalho com foco em resultados."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Objetivos específicos:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Promover o desenvolvimento do aluno por meio de ações que articulam e mobilizem conhecimentos, habilidades, valores e atitudes de forma potencialmente criativa e que estimula o aprimoramento contínuo."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Estimular, por meio de situações de aprendizagens, atitudes empreendedoras, sustentáveis e colaborativas nos alunos."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Articular as competências do perfil profissional com projetos integradores e outras atividades laborais que estimulam a visão crítica e a tomada de decisão para resolução de problemas."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Promover uma avaliação processual e formativa com base em indicadores das competências, que possibilitem a todos os envolvidos no processo educativo a verificação da aprendizagem."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Incentivar a pesquisa como princípio pedagógico e para consolidação do domínio técnico-científico, utilizando recursos didádicos e bibliográficos."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="200dp"
                android:text="Organização Curricular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Auxiliar na definição das estratégias e controle dos canais de distribuição."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Auxiliar na definição do preço dos produtos e serviços."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Auxiliar na elaboração e execução das estratégias de comercialização da organização."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Auxiliar na elaboração e execução de políticas de atendimento, acompanhamento e fidelização de clientes."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Auxiliar na elaboração e execução do plano de comunicação de markenting da organização."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Auxiliar na elaboração e realização de pesquisa de mercado e de marketing."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Auxiliar na operacionalização da política de gestão de produtos e serviços da organização."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Criar e desenvolver imagens vetoriais e layouts de páginas para meios impressos ou digitais de diferentes mídias."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Participar na elaboração e execução do plano de marketing da organização."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bolinhac"
                android:text="Projeto Integrador Técnico em Marketing."
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/voltarmark"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:text="VOLTAR"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange_strong"
                app:cornerRadius="20dp"
                android:layout_gravity="center"
                android:onClick="goBack"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>