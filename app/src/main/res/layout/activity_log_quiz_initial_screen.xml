<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".LogQuizInitialScreenActivity">

    <TextView
        android:id="@+id/logrankingbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/icekingdom"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="Pontuação"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:onClick="openRankingScreen"/>

    <Button
        android:id="@+id/iniciatelogquizbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/icekingdom"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/darkgreen"
        android:onClick="startQuizLog"
        android:text="Iniciar Quiz"
        android:textSize="30dp"
        app:cornerRadius="20dp"
        android:layout_below="@id/quiztittle" />

    <TextView
        android:id="@+id/quiztittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/adventure"
        android:paddingBottom="30dp"
        android:text="QuizLogística"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iniciatelogquizbutton"
        android:layout_centerHorizontal="true"
        app:lottie_rawRes="@raw/education"
        app:lottie_autoPlay="true"/>

</RelativeLayout>