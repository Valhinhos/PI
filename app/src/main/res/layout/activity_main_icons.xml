<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bluedetailedbg"
            tools:context=".MainIconsActivity">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="nome do usuÃ¡rio"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

                <ImageView
                    android:id="@+id/senacsimbolo"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/username"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@drawable/logo_senac_png" />

                <ImageView
                    android:id="@+id/iconava"
                    android:layout_width="124dp"
                    android:layout_height="116dp"
                    android:layout_below="@id/nameapp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:onClick="openAva"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    app:srcCompat="@drawable/ambientevirtual" />

                <ImageView
                    android:id="@+id/iconmapeamento"
                    android:layout_width="110dp"
                    android:layout_height="113dp"
                    android:layout_below="@id/nameapp"
                    android:layout_centerHorizontal="true"
                    android:onClick="openMap"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/mapeamento" />

                <ImageView
                    android:id="@+id/iconfrequencia"
                    android:layout_width="113dp"
                    android:layout_height="112dp"
                    android:layout_below="@id/nameapp"
                    android:layout_alignParentLeft="true"
                    android:onClick="openFrequency"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/frequencia" />

                <ImageView
                    android:id="@+id/iconbiblioteca"
                    android:layout_width="114dp"
                    android:layout_height="116dp"
                    android:layout_below="@id/iconfrequencia"
                    android:layout_alignParentLeft="true"
                    android:onClick="openBiblio"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/biblioteca" />

                <ImageView
                    android:id="@+id/iconcursosenac"
                    android:layout_width="120dp"
                    android:layout_height="118dp"
                    android:layout_below="@id/iconmapeamento"
                    android:layout_centerHorizontal="true"
                    android:onClick="openSenacCourses"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/cursossenac" />

                <ImageView
                    android:id="@+id/iconcursosdisponiveis"
                    android:layout_width="127dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/iconava"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="3dp"
                    android:onClick="openCourses"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    app:srcCompat="@drawable/cursosdisponiveis" />

                <ImageView
                    android:id="@+id/iconaprendizagemcoemrcial"
                    android:layout_width="116dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/iconbiblioteca"
                    android:layout_alignParentLeft="true"
                    android:onClick="openAC"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/aprendizagemcomercial" />

                <ImageView
                    android:id="@+id/iconredecarreiras"
                    android:layout_width="119dp"
                    android:layout_height="121dp"
                    android:layout_below="@id/iconcursosenac"
                    android:layout_centerHorizontal="true"
                    android:onClick="openRedeC"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/rededecarreiras"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/iconpi"
                    android:layout_width="126dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/iconcursosdisponiveis"
                    android:layout_alignParentRight="true"
                    android:onClick="openPI"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    app:srcCompat="@drawable/projetointegrador" />

                <ImageView
                    android:id="@+id/iconcreditos"
                    android:layout_width="126dp"
                    android:layout_height="125dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iconprofile"
                    android:onClick="openCredits"
                    android:paddingTop="20dp"
                    app:srcCompat="@drawable/creditos" />

                <TextView
                    android:id="@+id/nameapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/senacsimbolo"
                    android:gravity="center"
                    android:text="Sistema de Suporte ao Aluno"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

                <ImageView
                    android:id="@+id/icongame"
                    android:layout_width="120dp"
                    android:layout_height="106dp"
                    android:layout_below="@+id/iconaprendizagemcoemrcial"
                    android:layout_alignParentLeft="true"
                    android:onClick="openGames"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:backgroundTint="@color/blueicon"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/jogos" />

                <ImageView
                    android:id="@+id/iconprofile"
                    android:layout_width="103dp"
                    android:layout_height="106dp"
                    android:layout_below="@id/iconpi"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:onClick="openStudentProfile"
                    android:paddingRight="25dp"
                    android:text="Perfil"
                    app:srcCompat="@drawable/perfil" />

                <ImageView
                    android:id="@+id/iconposts"
                    android:layout_width="80dp"
                    android:layout_height="106dp"
                    android:text="posts"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iconredecarreiras"
                    android:layout_marginTop="19dp"
                    android:onClick="openUsersPost"
                    app:srcCompat="@drawable/posts"/>

        </RelativeLayout>

</androidx.core.widget.NestedScrollView>