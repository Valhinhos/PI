<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangebackground"
    tools:context=".ProjectsUploadActivity">

    <LinearLayout
        android:id="@+id/projectnamelayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/customborder"
        android:layout_alignTop="@id/lottieproject"
        android:layout_toRightOf="@id/lottieproject"
        android:layout_marginLeft="2dp">

        <TextView
            android:id="@+id/projectnametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="digite o nome do projeto:"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <EditText
            android:id="@+id/nomeprojetoet"
            android:layout_width="252dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/projectteacherlayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/customborder"
        android:layout_alignTop="@id/lottieprofessor"
        android:layout_toRightOf="@id/lottieproject"
        android:layout_marginLeft="2dp">

        <TextView
            android:id="@+id/teachernametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="digite o nome do professor:"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <EditText
                android:id="@+id/professoret"
                android:layout_width="252dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/projectresumelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/customborder"
        android:layout_alignTop="@id/lottieresume"
        android:layout_toRightOf="@id/lottieproject"
        android:layout_marginLeft="2dp">

        <TextView
            android:id="@+id/projectresumetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="digite um resumo do projeto:"
            android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <EditText
            android:id="@+id/informationprojectet"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/projectcontactlayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/customborder"
        android:layout_alignTop="@id/lottiecontact"
        android:layout_toRightOf="@id/lottieproject"
        android:layout_below="@id/projectresumelayout"
        android:layout_marginLeft="2dp">

        <TextView
            android:id="@+id/projectcontacttv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="digite um contato para o projeto:"
            android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <EditText
            android:id="@+id/contatoprojetoet"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieproject"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        app:lottie_rawRes="@raw/greenlight"
        app:lottie_autoPlay="true"
        android:background="@drawable/customborder"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieprofessor"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_below="@id/lottieproject"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/customborder"
        app:lottie_rawRes="@raw/businessmanwinnerwithtrophy"
        app:lottie_autoPlay="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieresume"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_below="@id/lottieprofessor"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/customborder"
        app:lottie_rawRes="@raw/resume"
        app:lottie_autoPlay="true" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottiecontact"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/projectresumelayout"
        android:layout_marginTop="20dp"
        android:background="@drawable/customborder"
        app:lottie_rawRes="@raw/education"
        app:lottie_autoPlay="true" />
    <LinearLayout
        android:id="@+id/imagelayout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/projectcontactlayout"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/pickedimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/choseimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lottiecontact"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/heineken"
            android:onClick="escolherImagem"
            android:text="escolher imagem" />

    </LinearLayout>



    <Button
        android:id="@+id/postarprojetobt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="@color/blue"
        android:layout_below="@id/imagelayout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="Postar projeto" />

</RelativeLayout>
</androidx.core.widget.NestedScrollView>