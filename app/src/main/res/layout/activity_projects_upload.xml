<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectsUploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/orangebackground"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nomeprojetoet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Digite o nome do projeto:"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/professoret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Digite o nome do professor:"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/projectimage"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/informationprojectet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Digite um resumo do projeto:"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/contatoprojetoet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Digite o contato do projeto:"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/postarprojetobt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/blue"
            android:text="Postar projeto" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>