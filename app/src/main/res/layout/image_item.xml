<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:background="@color/orange_strong"
        android:orientation="vertical">

        <Button
            android:id="@+id/deleteproject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/blue"
            android:onClick="deleteProject"
            android:text="deletar projeto" />

        <TextView
            android:id="@+id/nomeprojeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:hint="nome do projeto"
            android:text="@string/projectsname" />

        <TextView
            android:id="@+id/professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:hint="nome do projeto"
            android:text="@string/teachersname" />

        <ImageView
            android:id="@+id/projectimage"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/informationproject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:hint="nome do projeto"
            android:text="@string/projectinfo" />

        <TextView
            android:id="@+id/contatoprojeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:hint="contato do projeto"
            android:text="@string/projectcontact" />

        <TextView
            android:id="@+id/projectid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_strong"
            android:gravity="center"
            android:textSize="1dp"
            android:text= "" />
    </LinearLayout>


</androidx.cardview.widget.CardView>