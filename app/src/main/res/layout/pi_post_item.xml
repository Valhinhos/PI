<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/orange_strong"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_strong">

        <Button
            android:id="@+id/deleteprojectpostbt"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:layout_marginRight="10dp"
            android:text="X"
            android:layout_alignParentRight="true"
            app:cornerRadius="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/roundCardViewitem"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:elevation="0dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/userpicturepiitem"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/useruploader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:hint="nome do usuÃ¡rio"
            android:layout_alignTop="@id/roundCardViewitem"
            android:layout_toRightOf="@id/roundCardViewitem"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/nomeprojeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="35dp"
            android:hint="nome do projeto"
            android:text="@string/projectsname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:hint="nome do projeto"
            android:text="@string/teachersname"
            android:layout_alignTop="@id/projectimage"
            android:layout_toRightOf="@id/projectimage"/>

        <ImageView
            android:id="@+id/projectimage"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_below="@id/nomeprojeto"/>

        <TextView
            android:id="@+id/informationproject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:hint="nome do projeto"
            android:text="@string/projectinfo"
            android:layout_below="@id/projectimage"
            android:layout_marginTop="10px"/>

        <TextView
            android:id="@+id/contatoprojeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:hint="contato do projeto"
            android:text="@string/projectcontact"
            android:layout_below="@id/professor"
            android:layout_toRightOf="@id/projectimage"/>

        <TextView
            android:id="@+id/projectid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_strong"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text= "" />




    </RelativeLayout>




</androidx.cardview.widget.CardView>